{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "jsx": "react",
    "target": "ES6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "ES6"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/dotvvm-types"
    ]
  },

  "exclude": [
    "node_modules"
  ]
}